{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "react-native-brutalism": ["./src/index"]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "lib",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    }
}